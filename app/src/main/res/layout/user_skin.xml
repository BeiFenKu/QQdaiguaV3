<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/GhostWhite1"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:padding="5dp"
                android:id="@+id/rl1"
                android:background="@mipmap/king_bj"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/king_bj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="默认"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:padding="5dp"
                android:id="@+id/rl4"
                android:background="@drawable/board_quan"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/king_bj_purple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="魅色紫"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/board_quan"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">



            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:padding="5dp"
                android:id="@+id/rl2"
                android:background="@drawable/board_quan"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/king_bj_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="宝石绿"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl5"
                android:padding="5dp"
                android:background="@drawable/board_quan"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/king_bj_coloful" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="缤纷彩"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/board_quan"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="match_parent">


            <RelativeLayout
                android:padding="5dp"
                android:background="@drawable/board_quan"
                android:id="@+id/rl3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/king_bj_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="活力橙"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/board_quan"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">


            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/board_quan"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="重启生效"
                android:background="@drawable/king_button1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/submit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:background="@drawable/king_button"
                android:text="设置此项"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>